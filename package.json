{
  "name": "FastGitFileHistory",
  "displayName": "FastGitFileHistory",
  "description": "Quickly view a file's Git commit history & diffs from the Explorer or Editor context menu.",
  "version": "1.0.0",
  "publisher": "kirby561",
  "repository": "https://github.com/kirby561/FastGitFileHistory",
  "engines": {
    "vscode": "^1.102.0"
  },
  "main": "./out/extension.js",
  "icon": "icon.png",
  "contributes": {
    "commands": [
      {
        "command": "fastGitFileHistory.view",
        "title": "View File Git History",
        "category": "Git"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "fastGitFileHistory.view",
          "when": "resourceLangId != ''",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "fastGitFileHistory.view",
          "when": "editorLangId != ''",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Fast Git File History",
      "properties": {
        "fastGitFileHistory.gitPath": {
          "type": "string",
          "default": "git",
          "description": "Path to the git executable to use. Defaults to 'git' (first found in PATH)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "highlight.js": "^11.8.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "license": "MIT"
}
